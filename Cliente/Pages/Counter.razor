@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h1">Counter</MudText>

<MudText Typo="Typo.body2">Current count: @currentCount</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.PlusOne" OnClick="IncrementCount">Clic</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
